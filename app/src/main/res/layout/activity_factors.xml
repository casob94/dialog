<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/activity_factors" android:background="@color/colorBackground">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/editText_morning"
        android:layout_alignRight="@+id/editText_morning"
        android:layout_alignEnd="@+id/editText_morning"
        android:layout_marginTop="16dp"
        android:id="@+id/editText_midday" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/editText_midday"
        android:layout_alignLeft="@+id/editText_midday"
        android:layout_alignStart="@+id/editText_midday"
        android:layout_marginTop="16dp"
        android:id="@+id/editText_evening" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/editText_correction"
        android:layout_below="@+id/editText_evening"
        android:layout_alignLeft="@+id/editText_evening"
        android:layout_alignStart="@+id/editText_evening" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_morning"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignBaseline="@+id/textView_morning"
        android:layout_alignBottom="@+id/textView_morning"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Abends:"
        android:textSize="35px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/textView_midday"
        android:layout_alignBaseline="@+id/editText_evening"
        android:layout_alignLeft="@+id/textView_midday"
        android:layout_alignStart="@+id/textView_midday"
        android:id="@+id/textView_evening" />

    <TextView
        android:text="Korrektur:"
        android:layout_width="wrap_content"
        android:textSize="35px"

        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_correction"
        android:layout_alignLeft="@+id/textView_evening"
        android:layout_alignStart="@+id/textView_evening"
        android:layout_alignBaseline="@+id/editText_correction"
        android:id="@+id/textView_correction" />

    <TextView
        android:text="Faktoren"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="60px"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:id="@+id/textView_factorTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Mittags:"
        android:textSize="35px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_midday"
        android:layout_alignBaseline="@+id/editText_midday"
        android:layout_alignLeft="@+id/textView_morning"
        android:layout_alignStart="@+id/textView_morning" />

    <TextView
        android:text="Morgens:"
        android:textSize="35px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="63dp"
        android:id="@+id/textView_morning"
        android:layout_below="@+id/textView_factorTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Faktoren Ã„ndern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:background="#d7d4d4"
        android:id="@+id/button_factor_change"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="14dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>