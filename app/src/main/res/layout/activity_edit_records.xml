<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorBackground">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/table_layout_edit">

    </TableLayout>

    <ImageButton
        android:src="@mipmap/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:background="@drawable/my_button"
        android:padding="0dp"
        android:id="@+id/button_last_day" />
        <!--android:background="@drawable/my_button_bg"-->


    <ImageButton
        android:src="@mipmap/forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="0dp"
        android:padding="0dp"
            android:background="@drawable/my_button"
        android:id="@+id/button_next_day" />
        <!--android:background="@drawable/my_button_bg"-->

    <Button
        android:text="Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/button_calendar"
        android:background="@drawable/my_button"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_toLeftOf="@+id/button_next_day"
        android:layout_toRightOf="@+id/button_last_day"
        android:layout_toEndOf="@+id/button_last_day" />

    <Button
        android:text="text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/button_last_day"
        android:background="@drawable/my_button"
        android:id="@+id/testbutton"/>


</RelativeLayout>